<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

    <!-- field 指定action中校验的属性， -->

    <field name="account" >

        <field-validator type="requiredstring" >
 <!-- 指定验证规则的名称 -->

            <param name="trim" >
true
            </param>
 <!-- 去空格 -->

            <message>
<![CDATA[用户名不能为空！]]></message>
        </field-validator>
    </field>
    <field name="password" >

        <field-validator type="requiredstring" >
 <!-- 指定验证规则的名称 -->

            <param name="trim" >
true
            </param>
 <!-- 去空格 -->

            <message>
<![CDATA[密码不能为空！]]></message>
        </field-validator>
    </field>

</validators>