<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <package
            name="login"
            extends="struts-default"
            namespace="/login">

        <action name="*_index" class="loginAction" method="{1}">
            <result name="success">
                    /index.jsp
            </result>

            <result name="false" type="redirect">
                /
            </result>
            <result name="input">
                    /login.jsp
            </result>
        </action>
    </package>

    <package
            name="user"
            extends="struts-default"
            namespace="/user">

        <action
                name="*_user"
                class="com.appcrews.javaee.maicai.action.UserAction"
                method="{1}">
            <result name="success">../user/users.jsp</result>
            <result name="edit">../user/users_edit.jsp </result>

        </action>

    </package>

    <package
            name="order"
            extends="struts-default"
            namespace="/order">

        <action
                name="*_order"
                class="com.appcrews.javaee.maicai.action.OrderAction"
                method="{1}">

            <result name="success">
                ../order/manageD.jsp

            </result>

            <result name="detail">
                ../order/ord_detail.jsp

            </result>
            <result name="print">
                ../order/ord_print.jsp

            </result>

            <result name="edit">
                ../order/ord_edit.jsp

            </result>
        </action>
    </package>

    <package
            name="logout"
            extends="struts-default"
            namespace="/logout">

        <action
                name="*_logout"
                class="com.appcrews.javaee.maicai.action.LogoutAction"
                method="{1}">

            <result
                    name="false"
                    type="redirect">
                /
            </result>
        </action>
    </package>

    <package
            name="data"
            extends="struts-default"
            namespace="/data">

        <action
                name="*_manage"
                class="com.appcrews.javaee.maicai.action.ManagerAction"
                method="{1}">

            <result name="success">
                ../goods/manageS.jsp

            </result>
            <result name="type">
                ../Type.jsp

            </result>
            <result name="type1">
                ../addtype.jsp

            </result>
            <result name="edit">
                ../goods/sdat_edit.jsp

            </result>

            <result name="insert">
                ../goods/sdat_insert.jsp

            </result>

            <result
                    name="input"
                    type="redirect">
                /error.jsp

            </result>

            <result
                    name="input1"
                    type="redirect">
                /error1.jsp

            </result>

            <interceptor-ref name="defaultStack">

                <param name="fileUpload.maximumSize">
                    1024000

                </param>

                <param name="fileUpload.allowedTypes">
                    image/bmp,image/png,image/gif,image/jpeg,image/jpg

                </param>

                <param name="fileUpload.allowedExtensions">
                    png,bmp,jpg

                </param>
            </interceptor-ref>
        </action>
    </package>

</struts>