<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           	http://www.springframework.org/schema/context/spring-context-2.5.xsd"
>

<bean id="data" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="password" value="123456"></property>
		<property name="username" value="root"></property>
		<property name="url" value="jdbc:mysql://localhost:3306/shujub"></property>
	</bean>

    <bean id="shucaiaction" class="com.appcrews.javaee.maicai.dal.Dataimpl">
		<property name="dataSource" ref="data">
		</property>
	</bean>
	<bean id="dingdanaction" class="com.appcrews.javaee.maicai.dal.Orderimpl">
		<property name="dataSource" ref="data">
		</property>
	</bean>
	<bean id="admindao" class="com.appcrews.javaee.maicai.dal.Adminimpl">
		<property name="dataSource" ref="data">
		</property>
	</bean >
	<bean id="adminService" class="com.appcrews.javaee.maicai.service.adminServiceImp">
	<property name="admin" ref="admindao"></property>
</bean>
	<bean id="loginAction" class="com.appcrews.javaee.maicai.action.LoginAction" scope="prototype">
		<property name="adminService" ref="adminService"></property>
	</bean>
	<bean id="useraction" class="com.appcrews.javaee.maicai.dal.Userimpl">
	    <property name="dataSource" ref="data">
		</property>
	</bean>

</beans>